mixin bottomRedStrip()
	+b.bottom-red-strip
		+e.donate-items
			+e.A.item(href='#')
				+e.icon-cont
					+icon('red-strip-lightning')
				+e.item-txt Быстрое пожертвование
			+e.A.item(href='#')
				+e.icon-cont
					+icon('red-strip-portrait')
				+e.item-txt Именное пожертвование
			+e.A.item(href='#')
				+e.icon-cont
					+icon('red-strip-family')
				+e.item-txt Семейное пожертвование
		+e.A.share-btn
			+icon('share')

	//-certificat-slider019
mixin certificatSlider019()
	+e.slider
		.swiper-container.certificat-slider-019-js
			.swiper-wrapper
				.swiper-slide
					img.swiper-lazy(src='#' data-src='img/@2x/019-certificat-slider-1.jpg' alt='')
				.swiper-slide
					img.swiper-lazy(src='#' data-src='img/@2x/019-certificat-slider-2.jpg' alt='')


	//-donate target slider
mixin DonateTargetSlider019()
	+b.donate-target-slider019
		.dt-slider019-prev-js.wonderfull-prev.d-none.d-lg-flex
			+icon('arrow-right')
		.dt-slider019-prev-js.wonderful-next.d-none.d-lg-flex
			+icon('arrow-left')
		.swiper-container.donate-target-slider019-js
			.swiper-wrapper
				block

mixin DonateTargetSlide019(slideNumber='')
	.swiper-slide
		+e.slide-img
			img.swiper-lazy(src="#" data-src="img/@2x/019-donate-target-slider-img.png" alt="")
		+e.slide-descr=`3D макет сени и киота${slideNumber}`


mixin infoInlineTooltip()
	+b.inline-tooltip
		.icon-cont i
		.tooltip-box
			.tooltip-content
				.img-block
					img(src='img/@2x/019-tooltip-content.jpg' alt="")
				.descr-block Ио&#769;сиф Исиха&#769;ст&nbsp;&mdash; афонский монах-старец, духовный наставник многих афонских монахов. С&nbsp;именами учеников Иосифа связано обновление 6&nbsp;из&nbsp;20&nbsp;афонских монастырей и&nbsp;многих обителей за&nbsp;пределами Афона



