extends layout/main.pug


include ../blocks/s-content/_s-content.pug
include ../blocks/s-contact/_s-contact.pug
include ../blocks/s-cards/_s-cards.pug
include ../blocks/s-project/_s-project.pug
include ../blocks/s-rews/_s-rews.pug
include ../blocks/s-news/_s-news.pug
include ../blocks/s-why/_s-why.pug
include ../blocks/s-logo/_s-logo.pug
include ../blocks/s-continue/_s-continue.pug

block variables
	- let  mainPage= null
block title
	- let  title= 'шаг 2 Текущие проекты'
	title= title
block pagecontent 

	+mob-mnu()
	header.header
		+top-line()
	+page-head('ПОЖЕРТВОВАТЬ')
	+s-continue
		.s-continue-wrapper
			+e.group
				+e.group-title--light.ttu банковской картой
				.chosen-container.d-block
					+b.chosen-single--result
						span.option-row
							span.option-img-wrap
								img(src='img/@1x/video.jpg')
							span На храм равноапостольного князя Владимира,  п. Станционный-Полевской, Свердловская обл.
			+e.group
				+e.group-title Частота пожертвования
				.row.no-gutters
					+input-btn('Разовое','ch','col-sm-6')(checked)
					+input-btn('Ежемесячное','ch','col-sm-6')
			+e.group--other-border
				+e.group-title Сумма пожертвования
				.row.no-gutters
					+input-btn('300 ₽','rub','col-sm-4') 
					+input-btn('500 ₽','rub','col-sm-4')(checked) 
					+input-btn('1 000 ₽','rub','col-sm-4')
					
				+b.form-wrap
					+input('Другая сумма')

			+e.group
				+e.group-title Контактная информация
				+b.form-wrap
					+input('Телефон','tel')
					+input('Эл. почта','email')(class="border-danger")
					+input('Адрес доставки')
					+in-c()(checked)
						+e.SMALL.text Я хочу получать информацию о деятельности фонда на указанный адрес эл. почты

					+in-c()(checked)
						+e.SMALL.text Осуществляя пожертвование я принимаю условия #[a(href="#") договора-оферты]
					.text-center.pt-2
						+e.BUTTON.btn.btn-success(type="submit") ПОЖЕРТВОВАТЬ

	+footer()